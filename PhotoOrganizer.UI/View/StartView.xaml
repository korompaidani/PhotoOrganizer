<UserControl x:Class="PhotoOrganizer.UI.View.StartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resources="clr-namespace:PhotoOrganizer.UI.Resources.Language"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="{x:Static resources:TextResources.GettingStarted_Title}" Width="150" TextWrapping="Wrap" FontSize="53" TextAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.Accent}" Margin="0 5 0 5"/>
            <TextBlock Text="{x:Static resources:TextResources.GettingStarted_description}" Width="150" TextWrapping="Wrap" FontSize="11" TextAlignment="Justify" Foreground="{DynamicResource MahApps.Brushes.Gray7}" Margin="0 5 0 20"/>
            <Button Command="{Binding OpenWorkbenchCommand}" Style="{DynamicResource MyMetroGetStartedButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
