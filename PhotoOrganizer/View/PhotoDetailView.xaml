<UserControl x:Class="PhotoOrganizer.UI.View.PhotoDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoOrganizer.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="390"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Title" Margin="0 10 10 0"/>
        <TextBox Grid.Row="1" Text="{Binding Photo.Title,
                Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 5"/>

        <Label Grid.Row="2" Content="Path" Margin="0,0,5,0"/>
        <TextBox Grid.Row="3" Text="{Binding Photo.FullPath,
                UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 5"/>

        <Label Grid.Row="4" Content="Year" Margin="0,0,5,0"/>
        <ComboBox Grid.Row="5" ItemsSource="{Binding Years}" 
                  DisplayMemberPath="DisplayMemberItem"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding Photo.YearId, Mode=TwoWay}"
                  Margin="5 0 5 5"/>
        
        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <Button Content="Save" Width="125" Margin="5"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Delete" Width="125" Margin="5"
                    Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <DockPanel Grid.Row="7">
            <Image DockPanel.Dock="Left" Source="{Binding Photo.FullPath}" Margin="5 0 5 5"/>
            <DockPanel Margin="5 0 5 5">
                <StackPanel DockPanel.Dock="Right">
                    <Button Content="Add" Width="125" Margin="5 0 5 5"
                            Command="{Binding AddPeopleCommand}"/>
                    <Button Content="Remove" Width="125" Margin="5"
                            Command="{Binding RemovePeopleCommand}"/>
                </StackPanel>
                <DataGrid ItemsSource="{Binding Peoples}"
                          SelectedItem="{Binding SelectedPeople, Mode=TwoWay}"
                          AutoGenerateColumns="False" RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="People" Width="*"
                                            ElementStyle="{StaticResource DataGridColumnStyle}"
                                            EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                            Binding="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </DockPanel>
        
    </Grid>
</UserControl>
