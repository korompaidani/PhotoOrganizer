<UserControl x:Class="PhotoOrganizer.UI.View.PhotoDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoOrganizer.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Title:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Photo.Title,
                Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Path:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Photo.FullPath,
                UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Location:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding Locations}" 
                          DisplayMemberPath="DisplayMemberItem"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Photo.LocationId, Mode=TwoWay}"
                          Margin="5 0 5 5"
                          Width="250"/>
                <Button Content="Map" Margin="5 0 5 5"
                        Command="{Binding OpenMapCommand}"/>
            </StackPanel>

            <DockPanel Grid.Row="3" Grid.Column="1">

                <Image DockPanel.Dock="Left" Source="{Binding Photo.FullPath}" Margin="5 0 5 5" MouseDown="OnMouseDown"/>

            </DockPanel>
            <Label Grid.Row="4" Grid.Column="0" Content="Peoples:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <DockPanel Grid.Row="4" Grid.Column="1">
                <Button Content="+" FontSize="10" Height="5" Width="25" VerticalAlignment="Top" 
                        Command="{Binding OpenPeopleAddViewCommand}"/>

                <ListBox x:Name="PeoplesListBox"
                     ItemsSource="{Binding Peoples}"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding DisplayName}"
                                    Padding="3 0 3 0"
                                    FontSize="10"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>

            </DockPanel>

            <StackPanel Grid.Row="5"  Grid.Column="1" Orientation="Horizontal">
                <Button Content="Save" Width="125" Margin="5"
                    Command="{Binding SaveCommand}"/>
                <Button Content="Delete" Width="125" Margin="5"
                    Command="{Binding DeleteCommand}"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
