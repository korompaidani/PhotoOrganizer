<UserControl x:Class="PhotoOrganizer.UI.View.PhotoDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhotoOrganizer.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Title:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Photo.Title,
                Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Path:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Photo.FullPath,
                UpdateSourceTrigger=PropertyChanged}" Margin="5 0 5 5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Location:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                <ComboBox ItemsSource="{Binding Locations}" 
                          DisplayMemberPath="DisplayMemberItem"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Photo.LocationId, Mode=TwoWay}"
                          Margin="5 0 5 5"
                          Width="250"/>
                <Button Content="Map" Margin="5 0 5 5"/>
            </StackPanel>
        

        <DockPanel Grid.Row="3" Grid.Column="1">
            
            <Image DockPanel.Dock="Left" Source="{Binding Photo.FullPath}" Margin="5 0 5 5"/>
            
            
        </DockPanel>
            <DockPanel Grid.Row="4" Grid.Column="1" Margin="5 0 5 5">
                <StackPanel DockPanel.Dock="Right">
                    <Button Content="Add" Width="125" Margin="5 0 5 5"
                            Command="{Binding AddPeopleCommand}"/>
                    <Button Content="Remove" Width="125" Margin="5"
                            Command="{Binding RemovePeopleCommand}"/>
                </StackPanel>
                <DataGrid ItemsSource="{Binding Peoples}"
                          SelectedItem="{Binding SelectedPeople, Mode=TwoWay}"
                          AutoGenerateColumns="False" RowHeaderWidth="0"
                          FontSize="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*"                                            
                                            ElementStyle="{StaticResource DataGridColumnStyle}"
                                            EditingElementStyle="{StaticResource DataGridEditingColumnStyle}"
                                            Binding="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <DataGridTextColumn.Header>
                                <TextBlock FontSize="10" Text="People"/>
                            </DataGridTextColumn.Header>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>

            <StackPanel Grid.Row="5"  Grid.Column="1" Orientation="Horizontal">
                <Button Content="Save" Width="125" Margin="5"
                    Command="{Binding SaveCommand}"/>
                <Button Content="Delete" Width="125" Margin="5"
                    Command="{Binding DeleteCommand}"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>
